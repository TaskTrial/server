model Report {
  id          String     @id @default(uuid()) @db.Uuid
  name        String     @db.VarChar(100)
  description String?    @db.Text
  reportType  ReportType
  format      String     @db.VarChar(20)
  parameters  Json?
  filePath    String
  generatedBy String     @db.Uuid
  entityId    String     @db.Uuid
  entityType  EntityType
  createdAt   DateTime   @default(now())

  // Relations
  generator    User          @relation(fields: [generatedBy], references: [id])
  organization Organization? @relation(fields: [entityId], references: [id], map: "reports_organization_entityId_fkey")
  team         Team?         @relation(fields: [entityId], references: [id], map: "reports_team_entityId_fkey")

  @@map("reports")
  @@index([generatedBy])
  @@index([entityId])
}